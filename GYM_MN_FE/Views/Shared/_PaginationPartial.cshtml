@if (Model.PageCount > 1)
{
    <ul class="pagination">
        <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
            <a class="page-link" href="?page=1">First</a>
        </li>
        <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
            <a class="page-link" href="?page=@(Model.PageIndex - 1)">Previous</a>
        </li>
        @for (var i = 1; i <= Model.PageCount; i++)
        {
            <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                <a class="page-link" href="?page=@i">@i</a>
            </li>
        }
        <li class="page-item @(Model.PageIndex == Model.PageCount ? "disabled" : "")">
            <a class="page-link" href="?page=@(Model.PageIndex + 1)">Next</a>
        </li>
        <li class="page-item @(Model.PageIndex == Model.PageCount ? "disabled" : "")">
            <a class="page-link" href="?page=@Model.PageCount">Last</a>
        </li>
    </ul>
}
